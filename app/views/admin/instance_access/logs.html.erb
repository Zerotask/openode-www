<section>
  <h1 class="h3 mb-3 text-gray-800 mt-3">Logs</h1>
</section>
<section>
  <div class="row">
    <div class="col-lg-9">
      <p>
        
      </p>
      <textarea id="instanceLogs" class="scroll-down dynamic-terminal rounded mb-2">
<%= @logs %>
      </textarea>

      <%= form_for :logs,
        { url: "#{instance_access_to(@instance_id)}logs", method: :post } do |form| %>
        <div class="card">
          <div class="card-body">          
            <%= form.label :nb_lines, 'Number of lines' %>
            <div class="row">
              <div class="col-lg-10 col-md-10 col-sm-12 col-12">
                <div class="form-group mb-2">                
                  <div class="form-label-group mb-2">                  
                    <%= form.text_field :nb_lines,
                      class: 'form-control',
                      value: @nb_lines %>
                  </div>
                </div>
              </div>
              <div class="col-lg-2 col-md-2 col-sm-12 col-12">
              <%= form.submit 'Retrieve',
                    class: 'btn btn-outline-success w-100' %>             
              </div>            
            </div>    
          </div>
        </div>
      <% end %>

    </div>
    <div class="col-lg-3">
      <%= render 'admin/instances/access/sidebar', instance_id: params[:id] %>
    </div> 
  </div>
</section>
