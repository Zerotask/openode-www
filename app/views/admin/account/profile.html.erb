<section>
  <h1 class="h3 mb-3 text-gray-800 mt-3">Profile</h1>
</section>
<section>
  <div class="row">
    <div class="col-lg-9">
    <%= form_for :user, {
        url: "#",
        html: { class: 'form-vertical' }
      } do |form| %>
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-12">
              <div class="form-group mb-2">
                <%= form.label :email, 'Email', class: 'required' %>                
                <%= form.email_field :email, class: 'form-control' %>
              </div>
              <div class="form-group mb-2">
                <%= form.label :name, 'Name' %>       
                <%= form.text_field :name, class: 'form-control' %>
              </div>
              <div class="form-group mb-2">
                <%= form.label :compay, 'Company' %>       
                <%= form.text_field :company, class: 'form-control' %>
              </div>              
              <%= link_to 'Save', '/admin/account',
                    class: 'mt-3 btn btn-outline-success w-100',
                    method: :patch,
                    data: { confirm: "Are you sure?" } %>
            </div>
          </div>    
        </div>
      </div>
    <% end %>  
    </div>
    <div class="col-lg-3">
      <%= render 'admin/account/sidebar' %>
    </div>    
  </div>
</section>