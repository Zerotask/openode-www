<section>
  <h1 class="h3 mb-3 text-gray-800 mt-3">Alerts</h1>
</section>
<section>
  <p>
    The following alerts can be send via email when the given event(s) occur.
    Check the following events which you want to be alerted.
  </p>

  <div class="row">


    <div class="col-lg-9">
      <%= form_for :website,
        { url: "#{instance_settings_to(@instance_id)}alerts", method: :patch } do |form| %>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="form-group mb-2">
                  <% @alert_types.each do |alert_type| %>
                    <div class="form-label-group mb-2">
                      <%= form.check_box alert_type['id'] %>
                      <%= form.label alert_type['id'], alert_type['id']&.humanize %>
                    </div>
                  <% end %>

                  <%= form.submit "Save", class: 'btn btn-lg btn-success w-100 mb-3' %>
                </div>
              </div>
            </div>    
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-lg-3">
      <%= render 'admin/instance_settings/sidebar' %>
    </div>    
  </div>
</section>