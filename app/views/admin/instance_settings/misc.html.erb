<section>
  <h1 class="h3 mb-3 text-gray-800 mt-3">Misc</h1>
</section>
<section>
  <div class="row">
    <div class="col-lg-9">
      <%= form_for :website,
        { url: "#{instance_settings_to(@instance_id)}misc", method: :patch } do |form| %>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="form-group mb-2">
                  <div class="form-label-group mb-2">
                    <%= form.label :max_build_duration, 'Maximum deployment duration (seconds) - maximum value = 600 seconds, default 100 seconds', class: 'required' %>
                    <%= form.number_field :max_build_duration, class: 'form-control' %>
                  </div>

                  <div class="form-label-group mb-2">
                    <p class="alert alert-info">
                      <i class="fa fa-arrow-down"></i> Check the following field if you want to skip port verification
                    </p>

                    <%= form.check_box :skip_port_check %>
                    <%= form.label :skip_port_check, 'Port verification enabled' %>                    
                  </div>

                  <%= form.submit "Save", class: 'btn btn-lg btn-success w-100 mb-3' %>          
                </div>
              </div>
            </div>    
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-lg-3">
      <%= render 'admin/instance_settings/sidebar' %>
    </div>    
  </div>
</section>