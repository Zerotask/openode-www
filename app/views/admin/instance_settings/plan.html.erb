<section>
  <h1 class="h3 mb-3 text-gray-800 mt-3">Plan</h1>
</section>
<section>
  <div class="row">
    <div class="col-lg-9">
      <%= form_for :website,
        { url: "#{instance_settings_to(@instance_id)}plan", method: :patch } do |form| %>
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-lg-6 col-md-6 col-sm-12 col-12">
                <div class="form-group mb-2">

                  <div class="form-label-group mb-2">
                    <%= form.label :plan, 'Change your plan', class: 'required' %>
                    <%= form.select :plan, [['Sandbox', 'sandbox'],['Open Source','open_source']],
                    {}, { class: 'form-control', required: true } %>
                  </div>

                  <div id="instance-plan-opensource-field" class="d-none mt-3">
                    <h4><i class="fa fa-code-branch"></i> Open Source Request</h4>

                    <hr/>

                    <p>This is a open source project request, please make sure to fill all fields
                    carefully as it will be reviewed, typically within 1 business day.
                    You will receive an email once verified.</p>                  

                    <% if @application_status.present? %>
                      <div class="alert alert-<%= @application_status[:level] %>">
                        <%= @application_status.message %>
                      <div>
                    <% end %>

                    <div class="form-label-group mb-2">
                      <%= form.label :open_source_title, 'Project Title' %>
                      <%= form.text_field :open_source_title, class: "form-control" %>
                    </div>

                    <div class="form-label-group mb-2">
                      <%= form.label :open_source_repository, 'Repository (e.g.: github, gitlab, etc.)' %>
                      <%= form.text_field :open_source_repository, class: "form-control" %>
                    </div>

                    <div class="form-label-group mb-2">
                      <%= form.label :open_source_description, 'Project Description' %>
                      <%= form.text_area :open_source_description,
                                          cols: 50,
                                          rows: 10,
                                          class: "form-control" %>
                    </div>
                  </div>

                  <%= form.submit "Save", class: 'btn btn-lg btn-success w-100 mb-3' %>          
                </div>
              </div>
            </div>    
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-lg-3">
      <%= render 'admin/instance_settings/sidebar' %>
    </div>    
  </div>
</section>