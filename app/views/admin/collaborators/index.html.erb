<section>
  <h1 class="h3 mb-2 text-gray-800">Collaborators</h1>
</section>
<section>

  <pre>TODO: remove. Permission values, make sure to humanize (locale):
   'root' # all permissions
   'deploy'
   'dns'
   'alias'
   'storage_area'
   'location'
   'plan'
   'config'
  </pre>

  <div>
    <%= link_to 'Add', "#{instance_to(@instance_id)}collaborators/new" %>
  </div>

  <table>
    <tr>
      <th>User (email)</th>
      <th>Permissions</th>
      <th>Actions</th>
    </tr>

    <% @collaborators.each do |collaborator| %>
      <tr>
        <td><%= collaborator['user']['email'] %></td>
        <td>
          <%= collaborator['permissions'].inspect %>
        </td>
        <td>
          <ul>
            <li></li>
          </ul>
        </td>
      </tr>
    <% end %>
  </table>

</section>