<%= form_for :collaborator, {
    url: "/admin/instances/#{@instance_id}/collaborators/#{@collaborator.id}",
    html: { class: 'form-vertical' }
  } do |form| %>
  <div class="card">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12">
          <div class="form-group mb-2">
            <%= form.label :email, 'Email', class: 'required' %>
            <%= form.email_field :email, {
                class: 'form-control',
                required: true,
                readonly: @collaborator.id.present?
              } %>
          </div>

          <div class="form-group mb-2">
            <%= form.label :permissions, 'Permissions', class: 'required' %>
            <br/>
            <%= form.select :permissions, @permissions, {},
            {
              class: 'form-control mb-3',
              required: true,
              include_hidden: false,
              multiple: true,
              style: 'height: 180px'
            } %>
          </div>

          <%= form.submit "save!", class: 'btn btn-lg btn-success w-100 mb-3' %>
        </div>
      </div>    
    </div>
  </div>
<% end %>