<div id="admin-instance-deployments">
  <section>
    <div class='row'>
      <% activities.each do |activity| %>
        <div class='col-lg-12 col-sm-6 mb-2'>
          <div class="card card-instance-details">
            <div class='card-body'>
              <div class="row">
                <div class='col-lg-4 col-sm-4'>
                  <i class="fa fa-clock"></i> <b><%= activity.user %></b> <%= activity.message %>
                </div>
                <div class='col-lg-6 col-sm-6'>
                  <span class="badge badge-<%= activity.status[:level] %>">
                    <%= activity.status[:message] %>
                  </span>
                </div>
                <div class='col-lg-2 col-sm-2text-right'>
                  <i class="fa fa-calendar"></i> <%= activity.date %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>