<section class="terms-header bg-light px-3 py-3 pt-md-5 pb-md-4 mx-auto">
  <div class="container cointaier-shrinked">
    <h1 class="display-4 text-center text-success">Password Recovery</h1>
  </div>
</section>
<section class="pt-8 pt-md-11 bg-dark p-3 p-md-5">
  <div class="container">
    <%= form_tag users_forgot_password_path, {class: 'form-signin'} do |form| %>
      <div class="card">
        <div class="card-body">
          <p>We will send you recovery instructions to your email address if it exists.</p>
          <div class="form-label-group mb-3">
            <%= label_tag :email, 'Email', placeholder: 'your@email.com' %>
            <%= text_field_tag :email, '', class: 'form-control' %>
          </div>                   
          
          <div class="form-label-group mb-3">
            <%= render_recaptcha('forgot_password', @show_recaptcha_v2) %>
          </div>                             
          
          <%= submit_tag "Recover!", class: 'btn btn-lg btn-success w-100' %>
        </div>
      </div>
    <% end %>  
  </div>
</section>